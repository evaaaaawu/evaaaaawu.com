---
const { date } = Astro.props;
---

<time datetime={date.toISOString()}>
  {date.toLocaleDateString("en-GB", { day: "numeric" })}
  {date.toLocaleDateString("en-GB", { month: "short" })},
  {date.getFullYear()}
</time>

<style lang="scss">
  @use "../styles/abstracts" as *;

  time {
    color: $date-color;
  }
</style>
