---
const { date, locale } = Astro.props;
const localeForDate = locale === "en" ? "en-GB" : "zh-TW";
---

<time datetime={new Date(date).toISOString()}>
  {
    new Date(date).toLocaleDateString(localeForDate, {
      day: "numeric",
      month: "short",
      year: "numeric",
    })
  }
</time>

<style lang="scss">
  @use "../styles/abstracts" as *;

  time {
    color: $date-color;
  }
</style>
