---
// Redirect page to default locale or user's preferred locale
const defaultLocale = "en";
---

<meta http-equiv="refresh" content={`0;url=/${defaultLocale}/`} />
<script>
  // Try to redirect based on browser language
  const preferredLocale = navigator.language.split("-")[0];
  const supportedLocales = ["en", "zh-tw"];
  const targetLocale = supportedLocales.includes(preferredLocale)
    ? preferredLocale
    : "en";
  window.location.replace(`/${targetLocale}/`);
</script>
