---
import { getCollection } from "astro:content";
import BaseLayout from "../../../layouts/BaseLayout.astro";
import ArticlePreview from "../../../components/ArticlePreview.astro";

const locale = "zh-tw";
const allArticles = await getCollection(locale);
allArticles.sort(
  (a, b) => Date.parse(b.data.updateDate) - Date.parse(a.data.updateDate)
);
---

<BaseLayout title="Eva Wu's Tech Blog | Articles">
  <div class="container">
    <div class="grid-auto-fit margin-block-10">
      {
        allArticles.map((article) => (
          <ArticlePreview {article} locale={locale} />
        ))
      }
    </div>
  </div>
</BaseLayout>
