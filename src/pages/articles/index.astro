---
import { getCollection } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";
import ArticlePreview from "../../components/ArticlePreview.astro";

const allArticles = await getCollection("articles");

allArticles.sort((a, b) => Date.parse(b.data.creationDate) - Date.parse(a.data.creationDate));
---

<BaseLayout title="Eva Wu's Tech Blog | Articles">
  <div class="container">
    <div class="grid-auto-fit margin-block-10">
      {
        allArticles.map((article) => (
          <ArticlePreview {article} excerptLength="80" />
        ))
      }
    </div>
  </div>
</BaseLayout>
